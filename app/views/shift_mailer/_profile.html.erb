<h2>Trainings Undertaken</h2>
<table>
  <tr>
    <th>Training Name</th>
    <th>Undertaken</th>
    <th>Date of Completion</th>
  </tr>
  <% @profile.trainings.each do |t| %>
  <tr>
    <td><%= t.name %></td>
    <td><%= t.undertaken ? "Yes" : "No" %></td>
    <td><%= t.date_completed %></td>
  </tr>
  <% end %>
</table>