wb = xlsx_package.workbook
wb.add_worksheet(name: "Carer") do |sheet|
  sheet.add_row ["Id", "Carer Amount", "Carer First Name", "Carer Last Name", "Carer Email", "Carer  Phone", "Carer Bank Acct", "Carer Sort Code", "Care Home", "Care Home Phone", "Staffing Request Id", "Request Start", "Request End", "Created At", "Notes"]
  @payments.each do |payment|
    sheet.add_row [payment.id, payment.care_giver_amount, payment.user&.first_name, payment.user&.last_name, payment.user&.email, payment.user&.phone, payment.user&.bank_account, payment.user&.sort_code, payment.care_home&.name, payment.care_home&.phone, payment.staffing_request&.id, payment.staffing_request&.start_date, payment.staffing_request&.end_date, payment.created_at, payment.notes ]
  end
end