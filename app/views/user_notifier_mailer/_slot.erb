<table>
	
	<tr>
		<td><%= @staffing_response.user.role %></td>
		<td>
			<%= @staffing_response.user.first_name %><%= @staffing_response.user.last_name %>
		</td>
	</tr>

	<tr>
		<td>Phone</td>
		<td><%= @staffing_response.user.phone %></td>
	</tr>

	<tr>
		<td>Care Home</td>
		<td><%= @staffing_response.care_home.name %></td>
	</tr>

	<tr>
		<td>Address</td>
		<td>
			<%= @staffing_response.care_home.address %>, 
			<%= @staffing_response.care_home.town %>,
			<%= @staffing_response.care_home.postcode %>	
		</td>
	</tr>

	<tr>
		<td>Start</td>
		<td><%= @staffing_response.staffing_request.start_date.to_s(:custom_datetime) %></td>
	</tr>

	<tr>
		<td>End</td>
		<td><%= @staffing_response.staffing_request.end_date.to_s(:custom_datetime) %></td>
	</tr>

</table>